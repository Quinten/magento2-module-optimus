<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="content_default_update" />
    <head>
        <title>Base styling for content</title>
    </head>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/basic.phtml" name="optimus-content-basic" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/basic/titles.phtml" name="optimus-content-basic-titles" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/basic/special-titles.phtml" name="optimus-content-basic-special-titles" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/basic/quote.phtml" name="optimus-content-basic-quote" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/basic/lists.phtml" name="optimus-content-basic-lists" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/basic/dividers.phtml" name="optimus-content-basic-dividers" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/basic/tables.phtml" name="optimus-content-basic-tables" />
            <block class="Magento\Framework\View\Element\Template" template="StudioEmma_Optimus::content/basic/messages.phtml" name="optimus-content-basic-messages" />
        </referenceContainer>
    </body>
</page>
